<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Razorpay Web Integration Demo</display-name>

    <servlet>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>com.demo.razorpay.controllers.OrderController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PaymentController</servlet-name>
        <servlet-class>com.demo.razorpay.controllers.PaymentController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/order/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PaymentController</servlet-name>
        <url-pattern>/payment/*</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/pages/resource-not-found.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/pages/internal-server-error.jsp</location>
    </error-page>

</web-app>
